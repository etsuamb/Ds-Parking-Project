{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "BookingConfirmedEvent",
  "description": "Emitted when a booking is fully confirmed",
  "type": "object",
  "required": ["eventId", "bookingId", "userId", "lotId", "spotId", "timestamp", "status"],
  "properties": {
    "eventId": { "type": "string" },
    "bookingId": { "type": "integer" },
    "userId": { "type": "integer" },
    "lotId": { "type": "integer" },
    "spotId": { "type": "integer" },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "status": {
      "type": "string",
      "const": "confirmed"
    }
  },
  "additionalProperties": false
}
