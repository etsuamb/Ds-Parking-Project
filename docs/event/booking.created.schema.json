{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "BookingCreatedEvent",
  "description": "Emitted when a new booking is created",
  "type": "object",
  "required": ["eventId", "bookingId", "userId", "lotId", "spotId", "timestamp", "status"],
  "properties": {
    "eventId": {
      "type": "string",
      "description": "Unique event identifier (UUID)"
    },
    "bookingId": { "type": "integer" },
    "userId": { "type": "integer" },
    "lotId": { "type": "integer" },
    "spotId": { "type": "integer" },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "status": {
      "type": "string",
      "enum": ["pending"]
    }
  },
  "additionalProperties": false
}
